<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/account_menu_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".view.LoginActivity"
    tools:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sign_up_activity_background"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_papilio_logo"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:contentDescription="Papilio logo"
                android:paddingHorizontal="15dp"
                app:srcCompat="@drawable/papilio_logo_app" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            app:cardElevation="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp">

                <ImageView
                    android:id="@+id/user_profile_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginVertical="5dp"
                    app:srcCompat="@drawable/user_icon" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/account_user_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/user_profile_icon"
                    android:layout_marginLeft="50dp"
                    android:background="@color/white"
                    android:paddingLeft="15dp"
                    android:text="Profile"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <View
                    android:id="@+id/profile_divider"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_below="@id/account_user_profile"
                    android:layout_marginBottom="15dp"
                    android:background="@color/dark_blue" />

                <ImageView
                    android:id="@+id/quiz_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/profile_divider"
                    android:layout_marginVertical="5dp"
                    app:srcCompat="@drawable/quiz_icon" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/account_activity_quiz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_divider"
                    android:layout_alignStart="@id/quiz_icon"
                    android:layout_marginLeft="50dp"
                    android:background="@color/white"
                    android:paddingLeft="15dp"
                    android:text="Take the Activity Quiz"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <View
                    android:id="@+id/quiz_divider"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_below="@id/account_activity_quiz"
                    android:layout_marginBottom="15dp"
                    android:background="@color/dark_blue" />

                <ImageView
                    android:id="@+id/settings_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/quiz_divider"
                    android:layout_marginVertical="5dp"
                    app:srcCompat="@drawable/settings_icon" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/account_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/quiz_divider"
                    android:layout_marginLeft="50dp"
                    android:background="@color/white"
                    android:paddingLeft="15dp"
                    android:text="Settings"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <View
                    android:id="@+id/settings_divider"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_below="@id/account_settings"
                    android:layout_marginBottom="15dp"
                    android:background="@color/dark_blue" />

                <ImageView
                    android:id="@+id/help_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/settings_divider"
                    android:layout_marginVertical="5dp"
                    app:srcCompat="@drawable/help_icon" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/account_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/settings_divider"
                    android:layout_marginLeft="50dp"
                    android:background="@color/white"
                    android:paddingLeft="15dp"
                    android:text="Help"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <View
                    android:id="@+id/help_divider"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_below="@id/account_help"
                    android:layout_marginBottom="15dp"
                    android:background="@color/dark_blue" />

                <ImageView
                    android:id="@+id/about_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/help_divider"
                    android:layout_marginVertical="5dp"
                    app:srcCompat="@drawable/about_icon" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/account_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/help_divider"
                    android:layout_marginLeft="50dp"
                    android:background="@color/white"
                    android:paddingLeft="15dp"
                    android:text="About"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <View
                    android:id="@+id/about_divider"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_below="@id/account_about"
                    android:layout_marginBottom="15dp"
                    android:background="@color/dark_blue" />

                <ImageView
                    android:id="@+id/logout_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/about_divider"
                    android:layout_marginVertical="5dp"
                    app:srcCompat="@drawable/logout_icon" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/account_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/about_divider"
                    android:layout_marginLeft="50dp"
                    android:background="@color/white"
                    android:paddingLeft="15dp"
                    android:text="Logout"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>