<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".view.LoginActivity"
    android:id="@+id/account_menu_fragment"
    tools:visibility="visible">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_papilio_logo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="Papilio logo"
                        app:srcCompat="@drawable/papilio_logo_app"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/sign_up_activity_background"
                    >


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/account_user_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:text="Profile"
                        android:textAlignment="textStart"
                        android:background="@drawable/account_menu_button_border"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/account_activity_quiz"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:text="Take the Activity Quiz"
                        android:textAlignment="textStart"
                        android:background="@drawable/account_menu_button_border"
                        />


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/account_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:text="Settings"
                        android:textAlignment="textStart"
                        android:background="@drawable/account_menu_button_border"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/account_help"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:text="Help"
                        android:textAlignment="textStart"
                        android:background="@drawable/account_menu_button_border"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/account_about"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:text="About"
                        android:textAlignment="textStart"
                        android:background="@drawable/account_menu_button_border"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/account_logout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:text="Logout"
                        android:textAlignment="textStart"
                        android:background="@drawable/account_menu_button_border"
                        />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>