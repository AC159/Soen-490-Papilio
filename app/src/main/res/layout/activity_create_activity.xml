<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CreateActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_papilio_logo"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:contentDescription="@string/papilio_logo"
                            app:srcCompat="@drawable/papilio_logo_app" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:text="@string/create_your_activity"
                        android:textColor="#053F5C"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="10dp"
                        android:background="#DEE5E9"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/event_title"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/event_title"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="10dp"
                            android:background="@drawable/edit_text_shape"
                            android:backgroundTint="@color/white"
                            android:ems="10"
                            android:hint="@string/title"
                            android:paddingStart="10dp"
                            android:inputType="textPersonName"
                            android:textColor="@color/black"
                            android:textColorHint="#DEE5E9"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/event_location"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/event_location"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="10dp"
                            android:background="@drawable/edit_text_shape"
                            android:backgroundTint="@color/white"
                            android:ems="10"
                            android:hint="@string/location"
                            android:paddingStart="10dp"
                            android:inputType="textPersonName"
                            android:textColor="@color/black"
                            android:textColorHint="#DEE5E9"
                            tools:ignore="RtlSymmetry"
                            android:autofillHints="" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/event_date"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/select_date_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginStart="20dp"
                            android:clickable="true"
                            android:textColor="@color/dark_blue"
                            android:text="@string/select_date"
                            android:focusable="true" />

                        <LinearLayout
                            android:id="@+id/LinearLayout01"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="160dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginTop="10dp"
                                android:text="@string/event_start_time"
                                android:textColor="@color/black"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="160dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginTop="10dp"
                                android:text="@string/event_end_time"
                                android:textColor="@color/black"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/LinearLayout03"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/select_start_time_btn"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="20dp"
                                android:clickable="true"
                                android:textColor="@color/dark_blue"
                                android:text="@string/select_start_time"
                                android:focusable="true" />

                            <TextView
                                android:id="@+id/select_end_time_btn"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="20dp"
                                android:clickable="true"
                                android:textColor="@color/dark_blue"
                                android:text="@string/select_end_time"
                                android:focusable="true" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/event_description"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/event_description"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginHorizontal="10dp"
                            android:background="@drawable/edit_text_shape"
                            android:backgroundTint="@color/white"
                            android:ems="10"
                            android:gravity="top"
                            android:hint="@string/description"
                            android:paddingStart="10dp"
                            android:inputType="textMultiLine"
                            android:textColor="@color/black"
                            android:textColorHint="#DEE5E9"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/maximum_number_of_participants"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/event_max_number_participants"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="10dp"
                            android:background="@drawable/edit_text_shape"
                            android:backgroundTint="@color/white"
                            android:ems="10"
                            android:hint="@string/ex_10"
                            android:paddingStart="10dp"
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:textColorHint="#DEE5E9"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:id="@+id/import_pictures_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/import_pictures"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/chosen_files_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="10dp"
                            android:text=""
                            android:visibility="gone"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <Button
                            android:id="@+id/import_picture_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:elevation="5dp"
                            android:layout_marginTop="20sp"
                            app:cornerRadius="12dp"
                            android:backgroundTint="@color/turquoise"
                            android:visibility="visible"
                            android:text="@string/import_media"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:id="@+id/LinearLayout02"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:background="@color/white">

                            <Button
                                android:id="@+id/create_activity_btn"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                app:cornerRadius="12dp"
                                android:elevation="5dp"
                                android:backgroundTint="@color/dark_blue"
                                android:text="@string/create_activity"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>