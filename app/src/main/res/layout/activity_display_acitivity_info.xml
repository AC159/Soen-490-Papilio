<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DisplayActivityInfoActivity">

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="Orientation">

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                    <HorizontalScrollView
                        android:id="@+id/info_horizontal_Scroll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="20dp"

                        android:isScrollContainer="false">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scrollbars="horizontal"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/info_imageView0"
                                android:layout_width="400dp"
                                android:layout_height="225dp"
                                android:src="@drawable/example_event_photo" />
                            <ImageView
                                android:id="@+id/info_imageView1"
                                android:layout_width="400dp"
                                android:layout_height="225dp"
                                android:visibility="gone" />
                            <ImageView
                                android:id="@+id/info_imageView2"
                                android:layout_width="400dp"
                                android:layout_height="225dp"
                                android:visibility="gone" />
                            <ImageView
                                android:id="@+id/info_imageView3"
                                android:layout_width="400dp"
                                android:layout_height="225dp"
                                android:visibility="gone"/>
                            <ImageView
                                android:id="@+id/info_imageView4"
                                android:layout_width="400dp"
                                android:layout_height="225dp"
                                android:visibility="gone" />

                        </LinearLayout>
                    </HorizontalScrollView>
            </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">


                    <TextView
                        android:id="@+id/info_Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="20dp"
                        android:text="Title"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/heart_regular"
                        android:clickable="true"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/info_Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"
                    android:text="At as in understood an remarkably solicitude. Mean them very seen
     she she. Use totally written the observe pressed justice. Instantly cordially "/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingTop="25dp"
                    android:paddingBottom="25dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="120dp"
                        android:layout_height="90dp"
                        app:strokeColor="@color/blue"
                        app:strokeWidth="3dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        app:cardCornerRadius="30dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:paddingTop="5dp"
                                android:layout_height="40dp"
                                android:src="@drawable/user_solid"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                android:text="Single"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    android:text="$"/>
                                <TextView
                                    android:id="@+id/individualCost"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    android:text="2"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    android:text="/person"/>
                            </LinearLayout>


                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="120dp"
                        android:layout_height="90dp"
                        app:strokeColor="@color/orange"
                        app:strokeWidth="3dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        app:cardCornerRadius="30dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:paddingTop="5dp"
                                android:layout_height="40dp"
                                android:src="@drawable/users_solid"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                android:text="Group"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    android:text="$"/>
                                <TextView
                                    android:id="@+id/groupCost"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    android:text="2"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    android:text="/person"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textSize="10dp"
                                android:text="Minimum 4 people"/>
                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <Button
                    android:id="@+id/join_button"
                    android:layout_width="192dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/orange"
                    android:elevation="5dp"
                    android:text="Join"
                    android:textColor="@color/white"
                    android:visibility="visible"
                    app:cornerRadius="100dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="Location:"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="left"/>

                <TextView
                    android:id="@+id/info_Location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="address"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="left"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingLeft="15dp"
                    android:text="Reviews:"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="left"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="374dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/light_blue"
                    app:strokeWidth="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp">

                        <include layout="@layout/activity_review_box" />
                        <include layout="@layout/activity_review_box" />
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>