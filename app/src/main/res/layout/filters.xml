<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="45dp"
            android:orientation="vertical">

            <com.google.android.material.slider.RangeSlider
                android:id="@+id/slider_individual_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:values="@array/rangeSliderValues"
                app:haloColor="@color/orange"
                android:valueFrom="0"
                android:valueTo="1000"
                android:stepSize="10">

            </com.google.android.material.slider.RangeSlider>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Individual Cost Range"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:textColor="@color/black">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="45dp"
            android:orientation="vertical">

            <com.google.android.material.slider.RangeSlider
                android:id="@+id/slider_group_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:values="@array/rangeSliderValues"
                app:haloColor="@color/orange"
                android:valueFrom="0"
                android:valueTo="1000"
                android:stepSize="10">

            </com.google.android.material.slider.RangeSlider>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Group Cost Range"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:textColor="@color/black">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="45dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:weightSum="9"
                android:layout_marginBottom="15dp">

                <TextView
                    android:id="@+id/select_start_date_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Start Date"
                    android:clickable="true"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:focusable="true">
                </TextView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right_arrow_filters"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/select_end_date_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select End Date"
                    android:clickable="true"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:focusable="true">
                </TextView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date Range"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:textColor="@color/black">
            </TextView>

        </LinearLayout>




    </LinearLayout>


</LinearLayout>