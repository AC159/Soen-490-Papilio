<!--                                <include layout="@layout/activity_activities_box" />-->

<!--                                <include layout="@layout/activity_activities_box" />-->

<!--                            </androidx.cardview.widget.CardView>-->
<!--                        </HorizontalScrollView>-->
                    </LinearLayout>
                </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                tools:ignore="MissingConstraints">

                <include
                    android:id="@+id/activity_box0"
                    layout="@layout/activity_activities_box" />

                <include
                    android:id="@+id/activity_box1"
                    layout="@layout/activity_activities_box" />

                <include
                    android:id="@+id/activity_box2"
                    layout="@layout/activity_activities_box" />
            </LinearLayout>
        </LinearLayout>


        
       
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>